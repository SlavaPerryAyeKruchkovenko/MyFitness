<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WorkoutChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:indeterminateTint">?attr/colorOnSurface</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:checkable">true</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:backgroundTint">?attr/colorChipBackground</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="chipStrokeColor">?attr/colorChipBorder</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <style name="Workout.Loader" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?attr/colorOnSurface</item>
    </style>

    <style name="Workout.TextField" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Workout.SearchField" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableStart">@android:drawable/ic_menu_search</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorHint</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="WorkoutCard" parent="Base.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorCard</item>
    </style>

    <style name="WorkoutCard.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="WorkoutCard.Field" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
    </style>

    <style name="WorkoutCard.Description" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
