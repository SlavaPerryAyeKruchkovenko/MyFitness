<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WorkoutDetails.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="WorkoutDetails.Field" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
    </style>

    <style name="WorkoutDetails.Description" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
