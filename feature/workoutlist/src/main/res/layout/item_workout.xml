<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WorkoutCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/WorkoutCard.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Зарядка 6. Улучшаем осанку" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/type"
            style="@style/WorkoutCard.Field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Тип: Кардио" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/duration"
            style="@style/WorkoutCard.Field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Длительность: 14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/WorkoutCard.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:text="Укрепляем позвоночник для красивой осанки. Также уделим внимание коленям и голеностопу"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
